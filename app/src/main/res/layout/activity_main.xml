<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E54B4B"
    tools:context="pt.attendly.attendly.MainActivity"
    tools:layout_editor_absoluteY="81dp">


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@drawable/selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/navigation" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:onClick="openProfile"
        android:text="Enter Profile"
        android:visibility="gone"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="412dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openTeacherActivity"
        android:text="ENTER TEACHER MAIN ACTIVITY"
        android:visibility="gone"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="412dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openManagerClass"
        android:text="Enter Manager Activity"
        android:visibility="gone"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="412dp" />

    <Button
        android:id="@+id/btnHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openHistoryActivity"
        android:text="Enter History Activity"
        android:visibility="gone"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="412dp" />

    <TextView
        android:id="@+id/txtEstado"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/exo2_regular"
        android:paddingBottom="5dp"
        android:text="Estado"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="1dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="7dp"
        app:layout_constraintBottom_toTopOf="@+id/button14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEstado">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/frame_9" />

            <TextView
                android:id="@+id/txtNameSubject"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:fontFamily="@font/exo2_regular"
                android:paddingBottom="10dp"
                android:text="Aula"
                android:textAlignment="center"
                android:textSize="22sp"
                tools:layout_editor_absoluteX="270dp"
                tools:layout_editor_absoluteY="189dp" />

            <TextView
                android:id="@+id/txtNameCourse"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:fontFamily="@font/exo2_regular"
                android:text="Aula"
                android:textAlignment="center"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="270dp"
                tools:layout_editor_absoluteY="189dp" />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f4f4f4"
                android:fontFamily="@font/exo2_regular"
                android:text="Aula"
                android:textAlignment="center"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="270dp"
                tools:layout_editor_absoluteY="189dp" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f4f4f4"
                android:fontFamily="@font/exo2_regular"
                android:text="Aula"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="264dp" />

            <TextView
                android:id="@+id/txtClass"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:background="#f4f4f4"
                android:fontFamily="@font/exo2_regular"
                android:text="Class"
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/txtNameStudent"
                app:layout_constraintTop_toBottomOf="@+id/txtNameStudent" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/button14"
        android:layout_width="259dp"
        android:layout_height="35dp"
        android:layout_marginEnd="125dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/round_button_w"
        android:onClick="openManagerClass"
        android:text="Gerir Aula"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

</android.support.constraint.ConstraintLayout>
